  <script>
    const psText = "P.S. Itâ€™s no longer plastic, baby ğŸ™‚. Our love could never be that cheap hahaha";
    let psIndex = 0;

    function typePS() {
      const psElem = document.getElementById("ps");
      if (psIndex < psText.length) {
        psElem.innerHTML += psText[psIndex];
        psIndex++;
        setTimeout(typePS, 60); // typing speed in ms
      }
    }

    function showFinal() {
      const card = document.getElementById("card");
      const final = document.getElementById("final");

      card.style.animation = "fadeOut 1.5s ease forwards";

      setTimeout(() => {
        card.style.display = "none";
        final.style.display = "block";
        typePS(); // start typing after final screen appears
      }, 1500);
    }

    // floating hearts
    const hearts = ["ğŸ¤","ğŸ’•","ğŸ’–"];
    setInterval(() => {
      const heart = document.createElement("div");
      heart.className = "heart";
      heart.textContent = hearts[Math.floor(Math.random() * hearts.length)];
      heart.style.left = Math.random() * 100 + "vw";
      heart.style.animationDuration = (6 + Math.random() * 4) + "s";
      document.body.appendChild(heart);

      setTimeout(() => heart.remove(), 10000);
    }, 900);
  </script>

